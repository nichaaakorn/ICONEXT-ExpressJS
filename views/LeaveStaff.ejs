<!DOCTYPE html>
<html lang="en">

<head>
    <title>Leave</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-info">
        <a class="navbar-brand" href="/project">ICONEXT</a>
        <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/project">Project Management</a>
                </li>
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Master Data Management</a
            >
            <div class="dropdown-menu" aria-labelledby="dropdownId">
              <a class="dropdown-item" href="/Manpower/staff">Manpower</a>
                    <a class="dropdown-item" href="/Holiday">Holiday</a>
                    <a class="dropdown-item" href="/leave/staff">Leave</a>
                    <a class="dropdown-item" href="/position#">Position</a>
        </div>
        </li>
        </ul>
        </div>
    </nav>

    <div class="container">
        <div class="text-center font-weight-bold display-4 mt-3">LEAVE</div>
        <div class="h1 font-weight-bold mt-4 mb-4">Full Time Staff</div>
        <div class="col-6 mt-3 pl-0">
            <div class="row">
                <div class="form-group mx-sm-3 mb-2">
                    <input autocomplete="off" type="text" class="form-control" id="search" placeholder="Search Name" />
                </div>
                <div class="ml-1">
                    <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <b>Select Type</b>
            </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <form action="/leave/staff">
                            <button class="dropdown-item" type="submit">
                  Full Time Staff
                </button>
                        </form>
                        <form action="/leave/outsource">
                            <button class="dropdown-item" type="submit">OutSource</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <table class="table table-hover table-info">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Nickname</th>
                        <th scope="col">Position</th>
                        <th scope="col">Tel</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Active</th>
                        <th scope="col" class="text-center">Add Leave</th>
                    </tr>
                </thead>
                <tbody id="showStaff">
                    <% Staffs.forEach(function(staff){ %>
                        <tr>
                            <td>
                                <%= staff.EID %>
                            </td>
                            <td>
                                <%= staff.Title %>
                            </td>
                            <td>
                                <%= staff.Name %>
                            </td>
                            <td>
                                <%= staff.SurName %>
                            </td>
                            <td>
                                <%= staff.NickName %>
                            </td>
                            <td>
                                <%= staff.Position %>
                            </td>
                            <td>
                                <%= staff.Tel %>
                            </td>
                            <td>
                                <%= staff.Email %>
                            </td>
                            <td class="text-center font-weight-bold">
                                <%= staff.Active %>
                            </td>
                            <form action="/viewleave/<%= staff.EID %>" method="GET">
                                <td class="text-center">
                                    <button type="submit" class="btn btn-success">
                    <i class="fa fa-pencil" style="font-size: 20px"></i>
                  </button>
                                </td>
                            </form>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
        $("#search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#showStaff tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    </script>
</body>

</html>