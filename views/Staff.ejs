<!doctype html>
<html lang="en">

<head>
    <title>Manpower</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="/project">ICONNEXT</a>
        <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId"
            aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/project">Project Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Report</a>
                </li>
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">Master Data Management</a>
                    <div class="dropdown-menu" aria-labelledby="dropdownId">
                        <a class="dropdown-item" href="/Manpower/staff">Manpower</a>
                        <a class="dropdown-item" href="/Holiday">Holiday</a>
                        <a class="dropdown-item" href="/leave/staff">Leave</a>
                        <a class="dropdown-item" href="/position#">Position</a>
                        <a class="dropdown-item" href="#">Project Position</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="modal fade" id="modalAddStaff" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h3 class="modal-title w-100 font-weight-bold">Add Staff</h3>
                </div>
                <form action="/addstaff" method="POST" class="needs-validation" novalidate>
                    <div class="col-11 m-auto">
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">ID</label>
                                <input type="text" class="form-control" placeholder="ID" name="ID" required>
                            </div>
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Title</label>
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="Title"
                                    required>
                                    <option value="Mr.">Mr.</option>
                                    <option value="Mrs.">Mrs.</option>
                                    <option value="Miss.">Miss.</option>
                                    <option value="Dr.">Dr.</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Name</label>
                                <input type="text" class="form-control" name="Name" placeholder="Name" required>
                            </div>
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Surname</label>
                                <input type="text" class="form-control" name="Surname" placeholder="Surname" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Nickname</label>
                                <input type="text" class="form-control" name="Nickname" placeholder="Name" required>
                            </div>
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Position</label>
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref"
                                    name="Position">
                                    <% Positions.forEach(function(position){ %>
                                    <option value="<%= position.Description %>"><%= position.Description %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Tel</label>
                                <input type="text" class="form-control" name="Tel" placeholder="Tel" required>
                            </div>
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Email</label>
                                <input type="email" class="form-control" name="Email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Start Date</label>
                                <input type="date" class="form-control" name="StartDate" required>
                            </div>
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">End Date</label>
                                <input type="date" class="form-control" name="EndDate">
                            </div>
                        </div>
                        <div class="form-row mt-2">
                            <div class="m-2">
                                Active :
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Active" value="Yes">
                                <label class="form-check-label" for="inlineRadio1">Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Active" value="No">
                                <label class="form-check-label" for="inlineRadio2">No</label>
                            </div>
                        </div>
                        <div class="text-center mb-4 mt-3">
                            <button type="submit" class="btn btn-primary font-weight-bold mr-3">Confirm</button>
                            <button type="button" class="btn btn-danger font-weight-bold"
                                data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="max-width: 90%;">
        <div class="display-4 font-weight-bold mt-4">Full Time Staff</div>
        <div class="col-6 mt-3">
            <div class="row">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" class="form-control" id="search" placeholder="Search Name">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Search</button>
                <div class="ml-2">
                    <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenu2"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <b>Select Type</b>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <form action="/manpower/staff">
                            <button class="dropdown-item" type="submit">Full Time Staff</button>
                        </form>
                        <form action="/manpower/outsource">
                            <button class="dropdown-item" type="submit">OutSouce</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <div style="text-align:right">
                <a href="" data-toggle="modal" data-target="#modalAddStaff">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-person-plus-fill" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7.5-3a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                    </svg>
                </a>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Nickname</th>
                        <th scope="col">Position</th>
                        <th scope="col">Tel</th>
                        <th scope="col">Email</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col" class="text-center">Active</th>
                        <th scope="col" class="text-center">Manage</th>
                        <th scope="col" class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody id="showStaff">
                    <% Staffs.forEach(function(staff){ %>
                    <tr>
                        <td><%= staff.EID %></td>
                        <td><%= staff.Title %></td>
                        <td><%= staff.Name %></td>
                        <td><%= staff.SurName %></td>
                        <td><%= staff.NickName %></td>
                        <td><%= staff.Position %></td>
                        <td><%= staff.Tel %></td>
                        <td><%= staff.Email %></td>
                        <td><%= staff.StartDate %></td>
                        <td><%= staff.EndDate %></td>
                        <td class="text-center font-weight-bold"><%= staff.Active %></td>
                        <form action="/editstaff/<%= staff.EID %>" method="GET">
                            <td class="text-center">
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-pencil" style="font-size: 20px;"></i>
                                </button>
                            </td>
                        </form>
                        <form action="/deletestaff" method="POST" onsubmit="return validate(this);">
                            <input type="hidden" name="EID" value="<%= staff.EID %>">
                            <td class="text-center">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash" style="font-size: 20px;"></i>
                                </button>
                            </td>
                        </form>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script>
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#showStaff tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    </script>
    <script>
        function validate(form) {
            if (confirm('Are you sure you want to delete this staff ?')) {
                return true;
            } else {
                return false;
            }
        }
    </script>
</body>

</html>