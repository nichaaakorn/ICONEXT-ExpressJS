<!doctype html>
<html lang="en">

<head>
    <title>View Project</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .list-group-item.active {
            background-color: #5bc0de;
            border-color: #5bc0de;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="/project">ICONNEXT</a>
        <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId"
            aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/project">Project Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Report</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">Master Data Management</a>
                    <div class="dropdown-menu" aria-labelledby="dropdownId">
                        <a class="dropdown-item" href="/Manpower/staff">Manpower</a>
                        <a class="dropdown-item" href="/Holiday">Holiday</a>
                        <a class="dropdown-item" href="/leave/staff">Leave</a>
                        <a class="dropdown-item" href="/position#">Position</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="modal fade" id="modalAddPhase" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h3 class="modal-title w-100 font-weight-bold">ADD PHASE</h3>
                </div>
                <form action="/createphase" method="POST" class="needs-validation" novalidate>
                    <div class="col-11 m-auto">
                        <div class="">
                            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Phase</label>
                            <input type="text" class="form-control" name="Phase" placeholder="Phase Name" required>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">StartDate</label>
                                <input type="date" class="form-control" name="StartDate" required>
                            </div>
                            <div class="col-6">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">EndDate</label>
                                <input type="date" class="form-control" name="EndDate" required>
                            </div>
                        </div>
                        <div class="">
                            <label class=" my-1 mr-2" for="inlineFormCustomSelectPref">Manpower</label>
                            <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="Manpower"
                                required>
                                <option selected></option>
                                <% Staffs.forEach(function(staff){ %>
                                <option value="<%= staff.Name + " " + staff.SurName %>">
                                    <%= staff.Name + " " +staff.SurName %>
                                </option>
                                <% }); %>
                                <% Outsource.forEach(function(outsource){ %>
                                <option value="<%= outsource.Name + " " + outsource.SurName %>">
                                    <%= outsource.Name + " " +outsource.SurName %>
                                </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="">
                            <label class=" my-1 mr-2" for="inlineFormCustomSelectPref">Role</label>
                            <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="Position"
                                required>
                                <option selected></option>
                                <% Positions.forEach(function(position){ %>
                                <option value="<%= position.Description %>"><%= position.Description %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="">
                            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Usage</label>
                            <input type="text" class="form-control" name="Usage" placeholder="Usage" required>
                        </div>
                        <div class="text-center mt-3 mb-3">
                            <input type="hidden" name="TID" value="<%= oneTask.TID %>">
                            <input type="hidden" name="PID" value="<%= Projects.PID %>"></input>
                            <button type="submit" class="btn btn-primary font-weight-bold">Add Phase</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="modal fade" id="modalCreateTasks" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Create Tasks</h4>
                    </div>
                    <form action="/createtasks" method="POST" class="needs-validation" novalidate>
                        <div class="modal-body mx-4">
                            <div class="md-form mb-2">
                                <input type="text" name="tasksName" class="form-control" placeholder="Tasks Name"
                                    required>
                            </div>
                        </div>
                        <input type="hidden" name="PID" value="<%= Projects.PID %>"></input>
                        <input type="hidden" name="TID" value="<%= oneTask.TID %>"></input>
                        <div class="modal-footer d-flex justify-content-center">
                            <button class="btn btn-primary font-weight-bold">Create Tasks</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="text-left mt-4">
            <div class="h1 font-weight-bold mb-3">Project <%= Projects.Name %></div>
            <a href="" class=" btn btn-primary btn-rounded font-weight-bold mb-4" data-toggle="modal"
                data-target="#modalCreateTasks">Add Tasks</a>
        </div>
        <div class="list-group" id="list-tab" role="tablist">
            <% Tasks.forEach(function(task){ %>
            <div class="row mb-2">
                <div class="col">
                    <a class="list-group-item list-group-item-action mt-2 font-weight-bold"
                        href="/project/viewproject/<%= Projects.PID %>/<%= task.TID %>" role=" tab" aria-controls="home"
                        style="border-radius: 5px;"><%= task.Tasks%></a>
                </div>
                <div class="d-flex align-items-center">
                    <form>
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-pencil" style="font-size: 20px;"></i>
                        </button>
                    </form>
                    <div class="ml-2"></div>
                    <form action="/deletetasks" method="POST" class="needs-validation" novalidate
                        onsubmit="return validate(this);">
                        <input type="hidden" name="PID" value="<%= Projects.PID %>">
                        <input type="hidden" name="deleteTID" value="<%= task.TID %>">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash" style="font-size: 20px;"></i>
                        </button>
                    </form>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="container mt-5">
        <div class="d-flex justify-content-between">
            <div class="text-left">
                <div class="font-weight-bold h3">
                    <%= oneTask.Tasks %>
                </div>
            </div>
            <div class="text-right mb-3">
                <a href="" class="btn btn-info font-weight-bold" data-toggle="modal" data-target="#modalAddPhase">Add
                    Phase</a>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Phase</th>
                    <th scope="col">StartDate</th>
                    <th scope="col">EndDate</th>
                    <th scope="col">Manpower</th>
                    <th scope="col">Role</th>
                    <th scope="col" class="text-center">Usage</th>
                    <th scope="col" class="text-center">Manage</th>
                    <th scope="col" class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% Phases.forEach(function(phase){ %>
                <tr>
                    <td><%= phase.Phase %></td>
                    <td><%= phase.StartDate %></td>
                    <td><%= phase.EndDate %></td>
                    <td><%= phase.Manpower %></td>
                    <td><%= phase.Role %></td>
                    <td class="text-center"><%= phase.Usage %></td>
                    <td class="text-center">
                        <form>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-pencil" style="font-size: 20px;"></i>
                            </button>
                        </form>
                    </td>
                    <td class="text-center">
                        <form action="/deletephase" method="POST" onsubmit="return validate(this);">
                            <input type="hidden" name="phaseID" value="<%= phase.ID %>">
                            <input type="hidden" name="PID" value="<%= Projects.PID %>">
                            <input type="hidden" name="TID" value="<%= oneTask.TID %>">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash" style="font-size: 20px;"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <script>
        function validate(form) {
            if (confirm('Are you sure you want to delete this project')) {
                return true;
            } else {
                return false;
            }
        }
    </script>
</body>

</html>